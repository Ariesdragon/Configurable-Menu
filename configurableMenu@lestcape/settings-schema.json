{
   "theme": {
      "type": "combobox",
      "description": "Selected theme of menu:",
      "default": "classic",
      "tooltip": "Select a theme of paper menu.",
      "options": {
         "Classic": "classic",
         "Stylized": "stylized",
         "Dragon": "dragon",
         "Dragon Inverted": "dragonInverted",
         "Horizontal": "horizontal",
         "Accessible": "accessible",
         "Accessible Inverted": "accessibleInverted",
         "Mint": "mint",
         "Windows 7": "windows7"
      }
   },
   "menu-icon" : {
      "type" : "iconfilechooser",
      "default" : "/usr/share/cinnamon/theme/menu.png",
      "description": "Icon",
      "tooltip": "Select an icon to show in the panel."
   }, 
   "menu-label" : {
      "type" : "entry",
      "default" : "Menu",
      "description" : "Text",
      "tooltip" : "Enter custom text to show in the panel."
   }, 
   "show-recent" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Show recent files",
      "tooltip": "Choose whether or not to show a recent file list in the menu."
   },
   "show-places" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Show bookmarks and places",
      "tooltip": "Choose whether or not to show bookmarks and places in the menu."
   },
   "enable-autoscroll" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Enable autoscrolling in application list",
      "tooltip": "Choose whether or not to enable smooth autoscrolling in the application list."
   },
   "search-filesystem" : {
      "type" : "checkbox",
      "default" : false,
      "description": "Enable filesystem path entry in search box",
      "tooltip": "Allows path entry in the menu search box."
   },
   "activate-on-hover" : {
      "type" : "checkbox",
      "default" : false,
      "description": "Open the menu when I move my mouse over it",
      "tooltip": "Enable opening the menu when the mouse enters the applet."
   },
   "hover-delay" : {
      "type": "spinbutton",
      "default" : 0,
      "min" : 0,
      "max" : 1000,
      "step" : 50,
      "units" : "milliseconds",
      "description" : "Menu hover delay:",
      "tooltip" : "Delay between switching categories."
   },
   "menu-editor-button" : {
      "type" : "button",
      "description" : "Open the menu editor",
      "callback" : "_launch_editor",
      "tooltip" : "Press this button to customize your menu entries."
   },
   "activate-on-press" : {
      "type" : "checkbox",
      "default" : false,
      "description": "Open the menu when I press my mouse over it",
      "tooltip": "Enable opening the menu when the mouse press over the applet."
   },
   "icon-app-size" : {
      "type": "spinbutton",
      "default" : 22,
      "min" : 10,
      "max" : 100,
      "step" : 1,
      "units" : "pixels",
      "description" : "Application icon size:",
      "tooltip" : "Set the application icon size."
   },
   "icon-cat-size" : {
      "type": "spinbutton",
      "default" : 22,
      "min" : 10,
      "max" : 100,
      "step" : 1,
      "units" : "pixels",
      "description" : "Category icon size:",
      "tooltip" : "Set the category icon size."
   },
   "icon-max-fav-size" : {
      "type": "spinbutton",
      "default" : 32,
      "min" : 10,
      "max" : 100,
      "step" : 1,
      "units" : "pixels",
      "description" : "Maximum favorites icon size:",
      "tooltip" : "Set the maximum favorites icon size."
   },
   "icon-power-size" : {
      "type": "spinbutton",
      "default" : 32,
      "min" : 10,
      "max" : 100,
      "step" : 1,
      "units" : "pixels",
      "description" : "Power icon size:",
      "tooltip" : "Set the power icon size."
   },
   "icon-control-size" : {
      "type": "spinbutton",
      "default" : 32,
      "min" : 10,
      "max" : 100,
      "step" : 1,
      "units" : "pixels",
      "description" : "Control icon size:",
      "tooltip" : "Set the Control icon size."
   },
   "icon-hover-size" : {
      "type": "spinbutton",
      "default" : 68,
      "min" : 10,
      "max" : 100,
      "step" : 1,
      "units" : "pixels",
      "description" : "Hover icon size:",
      "tooltip" : "Set the hover icon size."
   },
  "icon-accesible-size" : {
      "type": "spinbutton",
      "default" : 22,
      "min" : 10,
      "max" : 100,
      "step" : 1,
      "units" : "pixels",
      "description" : "Accesible icon size:",
      "tooltip" : "Set the accesible icon size."
   },
   "show-view-item" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Show view items control",
      "tooltip": "Choose whether or not to show view items control."
   },
   "view-item" : {
      "type" : "checkbox",
      "default" : true,
      "description": "View item of the menu in icon view",
      "tooltip": "Enable view item of the menu in icon view and disable view item of the menu in list view."
   },
   "show-favorites" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Show favorites",
      "tooltip": "Choose whether or not to show favorites in the menu."
   },
   "favorites-lines" : {
      "type": "spinbutton",
      "default" : 1,
      "min" : 1,
      "max" : 12,
      "step" : 1,
      "units" : "lines",
      "description" : "Number of favorites lines:",
      "tooltip" : "Choose the number of favorites lines.",
      "indent": true,
      "dependency": "how-favorites"
   },
   "show-hover-icon" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Show hover icon",
      "tooltip": "Choose whether or not to show hover icon in the menu."
   },
   "show-power-buttons" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Show power buttons",
      "tooltip": "Choose whether or not to show power buttons in the menu."
   },
   "show-time-date" : {
      "type" : "checkbox",
      "default" : false,
      "description": "Show time and date",
      "tooltip": "Choose whether or not to show time and date in the menu."
   },
   "time-format" : {
      "type" : "entry",
      "default" : "%H:%M",
      "indent": true,
      "dependency": "show-time-date",
      "description": "Time format:",
      "tooltip": "Choose the time format to show time in the menu."
   },
   "date-format" : {
      "type" : "entry",
      "default" : "%A,%e %B",
      "indent": true,
      "dependency": "show-time-date",
      "description": "Date format:",
      "tooltip": "Choose the date format to show time in the menu."
   },
   "show-app-title" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Show selected application title",
      "tooltip": "Choose whether or not to show selected application title in the menu."
   },
   "app-title-size" : {
      "type": "spinbutton",
      "default" : 10,
      "min" : 4,
      "max" : 20,
      "step" : 1,
      "units" : "points",
      "indent": true,
      "dependency": "show-app-title",
      "description" : "Size of selected application title:",
      "tooltip" : "Size of font in selected application title."
   },
   "show-app-description" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Show selected application description",
      "tooltip": "Choose whether or not to show selected application description in the menu."
   },
   "app-description-size" : {
      "type": "spinbutton",
      "default" : 8,
      "min" : 4,
      "max" : 20,
      "step" : 1,
      "units" : "points",
      "indent": true,
      "dependency": "show-app-description",
      "description" : "Size of selected application description:",
      "tooltip" : "Size of font in selected application description."
   },
   "controling-size" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Controling the size",
      "tooltip": "Choose whether or not to controling the size of the menu."
   },
   "width" : {
      "type": "spinbutton",
      "default" : 300,
      "min" : 300,
      "max" : 2000,
      "step" : 5,
      "units" : "pixels",
      "description" : "Width:",
      "tooltip" : "Width of menu.",
      "indent": true,
      "dependency": "controling-size"
   },
   "height" : {
      "type": "spinbutton",
      "default" : 300,
      "min" : 300,
      "max" : 1000,
      "step" : 5,
      "units" : "pixels",
      "description" : "Height:",
      "tooltip" : "Height of menu.",
      "indent": true,
      "dependency": "controling-size"
   },
   "scroll-favorites" : {
      "type" : "checkbox",
      "default" : false,
      "description": "Scroll of favorites visible",
      "tooltip": "Choose whether or not to make the scroll of favorites visible.",
      "indent": true,
      "dependency": "controling-size"
   },
   "scroll-categories" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Scroll of categories visible",
      "tooltip": "Choose whether or not to make the scroll of categories visible.",
      "indent": true,
      "dependency": "controling-size"
   },
   "scroll-applications" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Scroll of applications visible",
      "tooltip": "Choose whether or not to make the scroll of applications visible.",
      "indent": true,
      "dependency": "controling-size"
   }
}
