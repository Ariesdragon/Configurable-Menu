{
    "theme": {
        "type": "combobox",
        "description": "Menu layout:",
        "default": "classic",
        "tooltip": "Select a layout of menu.",
        "options": {
            "Classic": "classic",
            "GnoMenu": "gnomenu",
            "GnoMenu Bottom": "gnomenuBottom",
            "Vampire": "vampire",
            "Garibaldo": "garibaldo",
            "Stylized": "stylized",
            "Dragon": "dragon",
            "Dragon Inverted": "dragonInverted",
            "Horizontal": "horizontal",
            "Accessible": "accessible",
            "Accessible Inverted": "accessibleInverted",
            "Mint": "mint",
            "Windows 7": "windows7"
        },
        "value": "classic"
    },
    "menu-theme-save-button": {
        "type": "button",
        "description": "Save the layout configuration",
        "callback": "_saveConfigTheme",
        "tooltip": "Press this button to save the layout configuration."
    },
    "power-theme": {
        "type": "combobox",
        "description": "System buttons layout:",
        "default": "vertical",
        "tooltip": "Select a layout of system buttons.",
        "options": {
            "Vertical": "vertical",
            "Vertical List": "vertical-list",
            "Vertical Grid": "vertical-grid",
            "Vertical Text": "vertical-text",
            "Horizontal": "horizontal",
            "Horizontal List": "horizontal-list",
            "Horizontal Grid": "horizontal-grid",
            "Horizontal Text": "horizontal-text",
            "Retractable": "retractable",
            "Retractable Text": "retractable-text"
        },
        "value": "vertical"
    },
    "gnomenu-buttons-theme": {
        "type": "combobox",
        "description": "GnoMenu buttons layout:",
        "default": "icon",
        "tooltip": "Select a layout of GnoMenu buttons.",
        "options": {
            "Only Icons": "icon",
            "Only Text": "text",
            "Grid": "grid",
            "List": "list"
        },
        "value": "icon"
    },
    "menu-icon": {
        "type": "iconfilechooser",
        "default": "/usr/share/cinnamon/theme/menu.png",
        "description": "Icon",
        "tooltip": "Select an icon to show in the panel.",
        "value": "/usr/share/cinnamon/theme/menu.png"
    },
    "menu-label": {
        "type": "entry",
        "default": "Menu",
        "description": "Text",
        "tooltip": "Enter custom text to show in the panel.",
        "value": "Menu"
    },
    "show-recent": {
        "type": "checkbox",
        "default": true,
        "description": "Show recent files",
        "tooltip": "Choose whether or not to show a recent file list in the menu.",
        "value": true
    },
    "show-places": {
        "type": "checkbox",
        "default": true,
        "description": "Show bookmarks and places",
        "tooltip": "Choose whether or not to show bookmarks and places in the menu.",
        "value": true
    },
    "search-filesystem": {
        "type": "checkbox",
        "default": false,
        "description": "Enable filesystem path entry in search box",
        "tooltip": "Allows path entry in the menu search box.",
        "value": false
    },
    "activate-on-hover": {
        "type": "checkbox",
        "default": false,
        "description": "Open the menu when I move my mouse over it",
        "tooltip": "Enable opening the menu when the mouse enters the applet.",
        "value": false
    },
    "hover-delay": {
        "type": "spinbutton",
        "default": 0,
        "min": 0,
        "max": 1000,
        "step": 50,
        "units": "milliseconds",
        "description": "Menu hover delay:",
        "tooltip": "Delay between switching categories.",
        "value": 0
    },
    "menu-editor-button": {
        "type": "button",
        "description": "Open the menu editor",
        "callback": "_launch_editor",
        "tooltip": "Press this button to customize your menu entries."
    },
    "activate-on-press": {
        "type": "checkbox",
        "default": true,
        "description": "Open the menu when I press my mouse over it",
        "tooltip": "Enable opening the menu when the mouse press over the applet.",
        "value": true
    },
    "enable-autoscroll": {
        "type": "checkbox",
        "default": true,
        "description": "Enable autoscrolling",
        "tooltip": "Choose whether or not to enable smooth autoscrolling on the menu.",
        "value": true
    },
    "hover-box": {
        "type": "checkbox",
        "default": false,
        "description": "Hover icon have a box",
        "tooltip": "Choose whether or not to have a box on the hover icon.",
        "value": false
    },
    "control-box": {
        "type": "checkbox",
        "default": true,
        "description": "Control buttons have a box",
        "tooltip": "Choose whether or not to have a box on the control buttons.",
        "value": true
    },
    "power-box": {
        "type": "checkbox",
        "default": true,
        "description": "System buttons have a box",
        "tooltip": "Choose whether or not to have a box on the system buttons.",
        "value": true
    },
    "accessible-box": {
        "type": "checkbox",
        "default": false,
        "description": "Accessible panel has a box",
        "tooltip": "Choose whether or not to have a box on the accessible panel.",
        "value": false
    },
    "show-removable-drives": {
        "type": "checkbox",
        "default": false,
        "description": "Show removable drives on the accessible panel",
        "tooltip": "Choose whether or not to show removable drives on the accessible panel.",
        "value": false
    },
    "accessible-icons": {
        "type": "checkbox",
        "default": true,
        "description": "Show icons on the accessible panel",
        "tooltip": "Choose whether or not to have icons on the accessible panel.",
        "value": true
    },
    "categories-icons": {
        "type": "checkbox",
        "default": true,
        "description": "Show icons on the categories",
        "tooltip": "Choose whether or not to have icons on the categories.",
        "value": true
    },
    "app-button-width": {
        "type": "spinbutton",
        "default": 300,
        "min": 100,
        "max": 300,
        "step": 1,
        "units": "pixels",
        "description": "Maximum width of the application entry text:",
        "tooltip": "Set the maximum width of the application entry text.",
        "value": 300
    },
    "app-description": {
        "type": "checkbox",
        "default": false,
        "description": "Application entries have description",
        "tooltip": "Choose whether or not to have description on application entries.",
        "value": false
    },
    "icon-app-size": {
        "type": "spinbutton",
        "default": 22,
        "min": 10,
        "max": 100,
        "step": 1,
        "units": "pixels",
        "description": "Application icon size:",
        "tooltip": "Set the application icon size.",
        "value": 22
    },
    "icon-cat-size": {
        "type": "spinbutton",
        "default": 22,
        "min": 10,
        "max": 100,
        "step": 1,
        "units": "pixels",
        "description": "Category icon size:",
        "tooltip": "Set the category icon size.",
        "value": 22
    },
    "icon-max-fav-size": {
        "type": "spinbutton",
        "default": 32,
        "min": 10,
        "max": 100,
        "step": 1,
        "units": "pixels",
        "description": "Maximum favorites icon size:",
        "tooltip": "Set the maximum size of the favorites icon.",
        "value": 32
    },
    "icon-power-size": {
        "type": "spinbutton",
        "default": 32,
        "min": 10,
        "max": 100,
        "step": 1,
        "units": "pixels",
        "description": "System icons size:",
        "tooltip": "Set the system icons size.",
        "value": 32
    },
    "icon-control-size": {
        "type": "spinbutton",
        "default": 32,
        "min": 10,
        "max": 100,
        "step": 1,
        "units": "pixels",
        "description": "Control icon size:",
        "tooltip": "Set the control icon size.",
        "value": 32
    },
    "icon-hover-size": {
        "type": "spinbutton",
        "default": 68,
        "min": 10,
        "max": 100,
        "step": 1,
        "units": "pixels",
        "description": "Hover icon size:",
        "tooltip": "Set the hover icon size.",
        "value": 68
    },
    "icon-accessible-size": {
        "type": "spinbutton",
        "default": 22,
        "min": 10,
        "max": 100,
        "step": 1,
        "units": "pixels",
        "description": "Accessible icons size:",
        "tooltip": "Set the accessible icons size.",
        "value": 22
    },
    "show-view-item": {
        "type": "checkbox",
        "default": true,
        "description": "Show control buttons",
        "tooltip": "Choose whether or not to show control buttons.",
        "value": true
    },
    "view-item": {
        "type": "checkbox",
        "default": true,
        "description": "Show application entries in grid view",
        "tooltip": "Enable show application entries in grid(icon) view and disable show application entries in list view.",
        "value": true
    },
    "show-favorites": {
        "type": "checkbox",
        "default": true,
        "description": "Show favorites",
        "tooltip": "Choose whether or not to show favorites on the menu.",
        "value": true
    },
    "favorites-lines": {
        "type": "spinbutton",
        "default": 1,
        "min": 1,
        "max": 12,
        "step": 1,
        "units": "lines",
        "description": "Number of favorites lines:",
        "tooltip": "Choose the number of favorites lines.",
        "indent": true,
        "dependency": "how-favorites",
        "value": 1
    },
    "show-hover-icon": {
        "type": "checkbox",
        "default": true,
        "description": "Show hover icon",
        "tooltip": "Choose whether or not to show hover icon on the menu.",
        "value": true
    },
    "show-power-buttons": {
        "type": "checkbox",
        "default": true,
        "description": "Show system buttons",
        "tooltip": "Choose whether or not to show system buttons on the menu.",
        "value": true
    },
    "show-time-date": {
        "type": "checkbox",
        "default": false,
        "description": "Show time and date",
        "tooltip": "Choose whether or not to show time and date on the menu.",
        "value": false
    },
    "time-format": {
        "type": "entry",
        "default": "%H:%M",
        "indent": true,
        "dependency": "show-time-date",
        "description": "Time format:",
        "tooltip": "Choose the time format to show time on the menu.",
        "value": "%H:%M"
    },
    "date-format": {
        "type": "entry",
        "default": "%A,%e %B",
        "indent": true,
        "dependency": "show-time-date",
        "description": "Date format:",
        "tooltip": "Choose the date format to show time on the menu.",
        "value": "%A,%e %B"
    },
    "show-app-title": {
        "type": "checkbox",
        "default": true,
        "description": "Show name of the selected application",
        "tooltip": "Choose whether or not to show the selected application name on the menu.",
        "value": true
    },
    "app-title-size": {
        "type": "spinbutton",
        "default": 10,
        "min": 4,
        "max": 20,
        "step": 1,
        "units": "points",
        "indent": true,
        "dependency": "show-app-title",
        "description": "Font size of the selected application name:",
        "tooltip": "Set the font size of the selected application name.",
        "value": 10
    },
    "show-app-description": {
        "type": "checkbox",
        "default": true,
        "description": "Show description of the selected application",
        "tooltip": "Choose whether or not to show the selected application description on the menu.",
        "value": true
    },
    "app-description-size": {
        "type": "spinbutton",
        "default": 8,
        "min": 4,
        "max": 20,
        "step": 1,
        "units": "points",
        "indent": true,
        "dependency": "show-app-description",
        "description": "Font size of the selected application description:",
        "tooltip": "Set the font size of the selected application description.",
        "value": 8
    },
    "automatic-size": {
        "type": "checkbox",
        "default": false,
        "description": "Automatic size",
        "tooltip": "Choose whether or not to automatic adjust of the menu size.",
        "value": false
    },
    "full-screen": {
        "type": "checkbox",
        "default": false,
        "description": "Full screen",
        "tooltip": "Choose whether or not to put the menu in full screen mode.",
        "value": false
    },
    "width": {
        "type": "spinbutton",
        "default": 700,
        "min": 300,
        "max": 3000,
        "step": 5,
        "units": "pixels",
        "description": "Menu width:",
        "tooltip": "Width of the menu.",
        "value": 700
    },
    "height": {
        "type": "spinbutton",
        "default": 500,
        "min": 300,
        "max": 2000,
        "step": 5,
        "units": "pixels",
        "description": "Menu height:",
        "tooltip": "Height of the menu.",
        "value": 500
    },
    "scroll-favorites": {
        "type": "checkbox",
        "default": false,
        "description": "Show scrolling area of favorites",
        "tooltip": "Choose whether or not to show the scrolling area of favorites.",
        "value": false
    },
    "scroll-categories": {
        "type": "checkbox",
        "default": true,
        "description": "Show scrolling area of categories",
        "tooltip": "Choose whether or not to show the scrolling area of categories.",
        "value": true
    },
    "scroll-applications": {
        "type": "checkbox",
        "default": true,
        "description": "Show scrolling area of applications",
        "tooltip": "Choose whether or not to show the scrolling area of applications.",
        "value": true
    },
    "scroll-accessible": {
        "type": "checkbox",
        "default": true,
        "description": "Show scrolling area of accessible panel",
        "tooltip": "Choose whether or not to show the scrolling area of accessible panel.",
        "value": true
    },
    "spacer-line": {
        "type": "checkbox",
        "default": true,
        "description": "Show separator line",
        "tooltip": "Choose whether or not to show a line on separator.",
        "value": true
    },
    "spacer-size": {
        "type": "spinbutton",
        "default": 10,
        "min": 0,
        "max": 50,
        "step": 1,
        "units": "pixels",
        "description": "Separator size:",
        "tooltip": "Choose the size of separator.",
        "value": 10
    },
    "show-box-pointer": {
        "type": "checkbox",
        "default": true,
        "description": "Show menu box pointer",
        "tooltip": "Choose whether or not to show the menu box pointer.",
        "value": true
    },
    "fix-menu-corner": {
        "type": "checkbox",
        "default": false,
        "description": "Menu bordering screen edge",
        "tooltip": "Choose whether or not the menu bordering the screen edge.",
        "value": false
    }
}
